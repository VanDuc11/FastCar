<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChuXe.ThemXe.Upload_ImageXe_Activity">

    <RelativeLayout
        android:id="@+id/action_bar_in_upload_imageCar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        app:titleTextColor="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Ảnh xe"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textSize="18dp" />

        <RelativeLayout
            android:id="@+id/icon_back_in_upload_imageCar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_btn9">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"

                android:layout_centerInParent="true"
                android:src="@drawable/baseline_keyboard_arrow_left_24" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/icon_close_in_upload_imageCar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_btn9">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_close_black" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ln_btn_continue"
        android:layout_below="@id/action_bar_in_upload_imageCar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_anhtruoc_xe"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#f8f9fb"
                    android:src="@drawable/img_xe_truoc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                            <ImageView
                        android:id="@+id/img_anhtrai_xe"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:background="#f8f9fb"
                        android:src="@drawable/img_xe_trai" />

                    <ImageView
                        android:id="@+id/img_anhphai_xe"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:background="#f8f9fb"
                        android:src="@drawable/img_xe_phai" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_anhsau_xe"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#f8f9fb"

                    android:src="@drawable/img_xe_sau" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:background="#F6F1EA"
                android:padding="10dp"
                android:text="Bạn vui lòng đăng đủ 4 ảnh (trước - sau - trái - phải) để tăng hiệu quả cho thuê."
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giấy đăng ký xe:"
                    android:layout_marginHorizontal="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/img_dangky_xe"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="170dp"
                    android:background="#f8f9fb"
                    android:src="@drawable/image_dangkyxe" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giấy đăng kiểm xe:"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/img_dangkiem_xe"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="170dp"
                    android:background="#f8f9fb"
                    android:src="@drawable/image_dangkiem" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bảo hiểm xe:"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/img_baohiem_xe"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="170dp"
                    android:background="#f8f9fb"
                    android:src="@drawable/image_baohiemxe" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ln_btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm_ThemXe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_btn4"
            android:gravity="center"
            android:text="Hoàn tất"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:textColor="@color/white"
            android:textSize="17dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar_inThemXe"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:indeterminateTint="#474A34"
        android:layout_gravity="center" />

</RelativeLayout>