<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_xe_inItem_XeCuaToi"
                        android:layout_width="180dp"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_vinfast_in_chuyen"
                        app:shapeAppearanceOverlay="@style/img_XekhamPha" />

                    <TextView
                        android:id="@+id/tv_trangthaixe_inItem_XeCuaToi"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:background="@drawable/radius_top_10"
                        android:backgroundTint="#80F87B7B"
                        android:text="Đang hoạt động"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                        android:layout_alignBottom="@id/img_xe_inItem_XeCuaToi"
                        android:textSize="15dp" />

                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_tenxe_inItem_XeCuaToi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="TOYOTA INNOVA 2020"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/tv_soSao_inItem_XeCuaToi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_baseline_star_24"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingEnd="10dp"
                        android:text="5.0"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_soChuyen_inItem_XeCuaToi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/baseline_outlined_flag_24"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="10 chuyến"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_dollar" />

                    <TextView
                        android:id="@+id/tv_ngayTraXe_inChuyenXe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:padding="3dp"
                        android:paddingBottom="10dp"
                        android:text="Giá thuê: "
                        android:paddingStart="5dp"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_giaThue_inItem_XeCuaToi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500k"
                        android:textColor="@color/button_green"
                        android:textSize="16dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/tv_diachixe_inItem_XeCuaToi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_location_green_v1"
                        android:drawablePadding="5dp"
                        android:maxLines="2"
                        android:lineHeight="22dp"
                        android:ellipsize="end"
                        android:text="abcxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>