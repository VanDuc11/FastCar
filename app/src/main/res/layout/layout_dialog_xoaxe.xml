<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_dialog_custom"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="20dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:id="@+id/btn_bat_tat_tt_xe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_bat_tat_tt_xe"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_car_cancel" />

        <TextView
            android:id="@+id/tv_bat_tat_tt_xe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:text="Tắt hoạt động"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/btn_xoa_xe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_delete" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Xoá xe"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </LinearLayout>

</LinearLayout>