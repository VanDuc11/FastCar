<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LichSu_ThueXe_Activity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/action_bar_lsthuexe"
                android:background="#DCFBDE"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                app:titleTextColor="@color/white">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Thông tin chi tiết "
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                    android:textSize="18dp" />

                <RelativeLayout
                    android:id="@+id/icon_back_in_thongtincoban"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_btn9">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"

                        android:layout_centerInParent="true"
                        android:src="@drawable/baseline_keyboard_arrow_left_24" />
                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_btn9">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_close_black" />
                </RelativeLayout>
            </RelativeLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="18dp"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textSize="16dp"
                    android:text="Địa chỉ xe"/>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:background="#DCFBDE"
                    android:textColor="#049E0A"
                    android:text="Thay đổi"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="18dp"
                android:text="Huyện Hoàng Xa, Xã An Phú, Huyện Củ Chi, Hồ Chí Minh"
                android:textSize="14dp"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginVertical="8dp"
                tools:srcCompat="@tools:sample/avatars" />

            <View
                android:layout_width="match_parent"
                android:background="#F1ECEC"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:layout_height="1dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="18dp"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textSize="16dp"
                    android:text="Đặt xe nhanh"/>
             <Switch
                 android:layout_width="1dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"/>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:text="Yêu cầu thuê xe sẽ được tự đồng ý trong khoảng thời gian cài đặt"
                android:textSize="14dp"/>

            <View
                android:layout_width="match_parent"
                android:background="#F1ECEC"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="30dp"
                android:layout_height="1dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mô tả xe"
                android:textStyle="bold"
                android:layout_margin="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Huyndai Elantra số tự động đăng kí tháng 06/2018.
Xe gia đình mới đẹp, nội thất nguyên bản, sạch sẽ, bảo dưỡng thường xuyên, rửa xe miễn phí cho khách.
Xe rộng rãi, an toàn, tiện nghi, phù hợp cho gia đình du lịch Xe trang bị hệ thống cảm biến lùi, gạt mưa tự động, đèn pha tự động, camera hành trình, hệ thống giải trí AV cùng nhiều tiện nghi khác..."
                android:layout_marginHorizontal="28dp"/>

            <View
                android:layout_width="match_parent"
                android:background="#F1ECEC"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="30dp"
                android:layout_height="1dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="18dp"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Mức tiêu thụ nhiên liệu"/>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:text="0 lít/100 km"/>

            </LinearLayout>



            <TextView
                android:id="@+id/btn_tieptuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/custom_btn3"
                android:gravity="center"
                android:text="Tiếp tục"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:textColor="@color/white"
                android:textSize="17dp"
                />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>