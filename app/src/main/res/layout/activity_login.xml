<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Login_Activity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="358dp"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_login" />
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/from_data"
        android:padding="15dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sdt_email"

            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/baseline_email_24"
            app:helperTextEnabled="false"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeWidth="0dp"
            app:endIconMode="clear_text"
            app:hintTextColor="#1890FF"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:hint="Số điện thoại hoặc email"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:background="@drawable/text_input_background"
                android:clipToOutline="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/matkhau"
            android:layout_width="match_parent"
            app:helperTextEnabled="false"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeWidth="0dp"
            app:endIconMode="password_toggle"
            android:layout_height="wrap_content"
            app:hintTextColor="#1890FF"
            android:hint="Mật khẩu"
            app:startIconDrawable="@drawable/baseline_lock_24"
            android:layout_marginTop="10dp"
            app:errorEnabled="true"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_input_background"
                android:inputType="textPassword"
                android:clipToOutline="true" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:textStyle="bold"
            android:layout_marginVertical="5dp"
            android:gravity="right"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Đăng nhập"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginVertical="5dp"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có tài khoản ? đăng kí ngay"
            />

    </LinearLayout>



        <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoặc đăng nhập với:"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_data" />

    <FrameLayout
        android:id="@+id/loginAct_btnFacebook"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintBottom_toTopOf="@+id/loginAct_btnGoogle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="1dp"
            android:background="#2349AA"
            android:gravity="center"
            android:text="Đăng nhập với Facebook"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_facebook_48" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/loginAct_btnGoogle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="15dp"
      android:layout_marginVertical="10dp"
        android:paddingRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginAct_btnFacebook"
        app:layout_constraintVertical_bias="0.5">
        <FrameLayout
            android:layout_width="match_parent"
            android:background="@drawable/bo_goc"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="1dp"
                android:gravity="center"
                android:text="Đăng nhập với Google"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icons8_google_48" />
        </FrameLayout>

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>