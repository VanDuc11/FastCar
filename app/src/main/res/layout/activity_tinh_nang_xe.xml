<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.KhachHang.LichSu_ThueXe_Activity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/action_bar_lsthuexe"
            android:background="#DCFBDE"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            app:titleTextColor="@color/white">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Thông tin chi tiết "
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:textSize="18dp" />

            <RelativeLayout
                android:id="@+id/icon_back_in_thongtincoban"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn9">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"

                    android:layout_centerInParent="true"
                    android:src="@drawable/baseline_keyboard_arrow_left_24" />
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn9">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_close_black" />
            </RelativeLayout>
        </RelativeLayout>
     <TextView
         android:layout_width="match_parent"
        android:paddingHorizontal="10dp"
         android:layout_marginVertical="10dp"
         android:layout_height="wrap_content"
         android:text="Tính năng xe"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="8"
             android:orientation="vertical"
             >
             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="horizontal"
                 android:layout_marginBottom="4dp"
                 android:layout_marginHorizontal="10dp"
                 android:layout_height="1dp"
                 android:layout_weight="1"
                >
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="Bản đồ "/>
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:layout_marginHorizontal="8dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="Bluetooth"/>
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="Camera 360"/>
             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="horizontal"
                 android:layout_marginBottom="4dp"
                 android:layout_marginHorizontal="10dp"
                 android:layout_height="1dp"
                 android:layout_weight="1"
                >
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="Camera cập lề"/>
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:layout_marginHorizontal="8dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="Camera hành trình"/>
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="Camera lùi"/>
             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="horizontal"
                 android:layout_marginBottom="4dp"
                 android:layout_marginHorizontal="10dp"
                 android:layout_height="1dp"
                 android:layout_weight="1">
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="Cảm biến lốp "/>
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:layout_marginHorizontal="8dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="Cảm biến va chạm"/>
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="Cảnh báo tốc độ"/>
             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="horizontal"
                 android:layout_marginBottom="4dp"
                 android:layout_marginHorizontal="10dp"
                 android:layout_height="1dp"
                 android:layout_weight="1"
                 >
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="Cửa sổ trời "/>
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:layout_marginHorizontal="8dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="Định vị GPS"/>
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="Ghế trẻ em"/>
             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="horizontal"
                 android:layout_marginBottom="4dp"
                 android:layout_marginHorizontal="10dp"
                 android:layout_height="1dp"
                 android:layout_weight="1"
                >
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="Khe cắm USB "/>
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:layout_marginHorizontal="8dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="Lốp dự phòng "/>
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="màn hình DVD"/>
             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="horizontal"
                 android:layout_marginBottom="4dp"
                 android:layout_marginHorizontal="10dp"
                 android:layout_height="1dp"
                 android:layout_weight="1"
                 >
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="Nắp thùng xe bán tải"/>
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:layout_marginHorizontal="8dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="ETC"/>
                 <TextView
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:drawableTop="@drawable/ic_home_black_24dp"
                     android:padding="12dp"
                     android:background="#FFEB3B"
                     android:layout_weight="1"
                     android:text="Túi khí an toàn"/>
             </LinearLayout>
         </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:gravity="bottom"
              android:orientation="vertical"
              >

              <TextView
                  android:id="@+id/btn_tieptuc"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  android:layout_marginEnd="16dp"
                  android:background="@drawable/custom_btn3"
                  android:gravity="center"
                  android:layout_gravity="bottom"
                  android:text="Tiếp tục"
                  android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                  android:textColor="@color/white"
                  android:textSize="17dp"
                  />
          </LinearLayout>

      </LinearLayout>


    </LinearLayout>
</RelativeLayout>