<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:padding="10dp"
        android:background="@drawable/bo_goc_nhanxet">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginRight="5dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/layout_item_nhanXet_img"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/img_avatar_user" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/layout_item_nhanXet_tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:textSize="20dp"
                 />
            <TextView
                android:id="@+id/layout_item_nhanXet_tvSao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:drawableLeft="@drawable/ic_baseline_star_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="13dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:textSize="20dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/layout_item_nhanXet_tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15/10/2023"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:textColor="@color/grey"
                android:gravity="center"/>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>