<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.ChuXe.LichSuGiaoDich.LichSuGD_Activity">

    <ImageView
        android:id="@+id/btn_close_imagezoom"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:src="@drawable/icon_close_black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_1_inDialogZoom"
                android:layout_width="match_parent"
                android:src="@drawable/img_avatar_user_v1"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_2_inDialogZoom"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_avatar_user_v1"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>